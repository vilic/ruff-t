        "module": "commonjs",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "bld"
    },
    "exclude": [
        "bld",
        "test",
        "node_modules",
        "t.d.ts"
    ]
}